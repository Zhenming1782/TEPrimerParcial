<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registrar" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:layout_width="77dp"
            android:layout_height="37dp"
            android:id="@+id/textView"
            android:text="REGISTRAR"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="47dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Matricula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="104dp" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etcodigo"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:inputType="number"/>
    <TextView
            android:text="Usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/etcodigo" app:layout_constraintTop_toBottomOf="@+id/etcodigo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etusuario"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="ContraseÃ±a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/etusuario" app:layout_constraintTop_toBottomOf="@+id/etusuario"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etcontrasena"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@+id/textView3" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <Button
            android:text="Crear"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/bguardar"
            app:layout_constraintTop_toTopOf="@+id/bregresar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/bregresar"
            android:layout_marginStart="17dp"/>
    <Button
            android:text="Regresar"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:id="@+id/bregresar"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/etcontrasena"
            app:layout_constraintStart_toEndOf="@+id/etcontrasena"/>
</android.support.constraint.ConstraintLayout>